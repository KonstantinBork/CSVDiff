<?xml version="1.0" encoding="UTF-8"?>
<project name="module_csvdiff" default="compile.module.csvdiff">
  <dirname property="module.csvdiff.basedir" file="${ant.file.module_csvdiff}"/>
  
  <property name="module.jdk.home.csvdiff" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.csvdiff" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.csvdiff" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.csvdiff" value="-encoding UTF-8 -source 8 -target 8 ${compiler.args}"/>
  
  <property name="csvdiff.output.dir" value="${module.csvdiff.basedir}/out/production/CSVDiff"/>
  <property name="csvdiff.testoutput.dir" value="${module.csvdiff.basedir}/out/test/CSVDiff"/>
  
  <path id="csvdiff.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="csvdiff.module.production.classpath">
    <path refid="${module.jdk.classpath.csvdiff}"/>
    <path refid="library.commons-io-2.4.classpath"/>
    <path refid="library.poi-3.13-20150929.classpath"/>
    <pathelement location="${idea.home}/lib/hamcrest-core-1.3.jar"/>
    <pathelement location="${idea.home}/lib/junit-4.12.jar"/>
  </path>
  
  <path id="csvdiff.runtime.production.module.classpath">
    <pathelement location="${csvdiff.output.dir}"/>
    <path refid="library.commons-io-2.4.classpath"/>
    <path refid="library.poi-3.13-20150929.classpath"/>
    <pathelement location="${idea.home}/lib/hamcrest-core-1.3.jar"/>
    <pathelement location="${idea.home}/lib/junit-4.12.jar"/>
  </path>
  
  <path id="csvdiff.module.classpath">
    <path refid="${module.jdk.classpath.csvdiff}"/>
    <pathelement location="${csvdiff.output.dir}"/>
    <path refid="library.commons-io-2.4.classpath"/>
    <path refid="library.poi-3.13-20150929.classpath"/>
    <pathelement location="${idea.home}/lib/hamcrest-core-1.3.jar"/>
    <pathelement location="${idea.home}/lib/junit-4.12.jar"/>
  </path>
  
  <path id="csvdiff.runtime.module.classpath">
    <pathelement location="${csvdiff.testoutput.dir}"/>
    <pathelement location="${csvdiff.output.dir}"/>
    <path refid="library.commons-io-2.4.classpath"/>
    <path refid="library.poi-3.13-20150929.classpath"/>
    <pathelement location="${idea.home}/lib/hamcrest-core-1.3.jar"/>
    <pathelement location="${idea.home}/lib/junit-4.12.jar"/>
  </path>
  
  
  <patternset id="excluded.from.module.csvdiff">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.csvdiff">
    <patternset refid="excluded.from.module.csvdiff"/>
  </patternset>
  
  <path id="csvdiff.module.sourcepath">
    <dirset dir="${module.csvdiff.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  <path id="csvdiff.module.test.sourcepath">
    <dirset dir="${module.csvdiff.basedir}">
      <include name="src/test"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.csvdiff" depends="compile.module.csvdiff.production" description="Compile module CSVDiff"/>
  
  <target name="compile.module.csvdiff.production" description="Compile module CSVDiff; production classes">
    <mkdir dir="${csvdiff.output.dir}"/>
    <javac destdir="${csvdiff.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.csvdiff}/javac">
      <compilerarg line="${compiler.args.csvdiff}"/>
      <bootclasspath refid="csvdiff.module.bootclasspath"/>
      <classpath refid="csvdiff.module.production.classpath"/>
      <src refid="csvdiff.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.csvdiff"/>
    </javac>
    
    <copy todir="${csvdiff.output.dir}">
      <fileset dir="${module.csvdiff.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>

  <target name="clean.module.csvdiff" description="cleanup module">
    <delete dir="${csvdiff.output.dir}"/>
    <delete dir="${csvdiff.testoutput.dir}"/>
  </target>
</project>